<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="?attr/actionBarSize"
        tools:context=".ui.sections.mainsection.ui.home.PlacesFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:elevation="10dp"
                android:layout_height="0dp"
                android:layout_weight=".7"
                android:src="@mipmap/ic_launcher"
                android:background="@color/colorPrimary"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="-15dp"
                android:orientation="vertical"
                android:elevation="20dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        >
                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/mapa"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal|clip_vertical"
                            app:lottie_loop="true"
                            app:lottie_imageAssetsFolder="images"
                            app:lottie_autoPlay="true"
                            app:lottie_speed="1"
                            app:lottie_rawRes="@raw/phone_call" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Llamar"
                            android:layout_gravity="center_horizontal"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/greyText"
                        android:layout_marginTop="30dp"
                        />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        >

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/mapa2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal|clip_vertical"
                            app:lottie_loop="true"
                            app:lottie_imageAssetsFolder="images"
                            app:lottie_autoPlay="true"
                            app:lottie_speed="1"
                            app:lottie_rawRes="@raw/video_cam" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tomar Video"
                            android:layout_gravity="center_horizontal"
                            />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/greyText"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:elevation="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        >

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/mapa3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal|clip_vertical"
                            app:lottie_loop="false"
                            app:lottie_imageAssetsFolder="images"
                            app:lottie_autoPlay="true"
                            app:lottie_speed="1"
                            app:lottie_rawRes="@raw/phone_call" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Linterna"
                            android:layout_gravity="center_horizontal"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/greyText"
                        android:layout_marginBottom="20dp"
                        />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        >

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/mapa4"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal|clip_vertical"
                            app:lottie_loop="false"
                            app:lottie_imageAssetsFolder="images"
                            app:lottie_autoPlay="true"
                            app:lottie_speed="1"
                            app:lottie_rawRes="@raw/phone_call" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Antros"
                            android:layout_gravity="center_horizontal"
                            />
                    </LinearLayout>






                </LinearLayout>

            </LinearLayout>

        </LinearLayout>







    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>